---
import { 
  getCertificates, 
  getFeaturedCertificates, 
  getCertificateCategories 
} from '../lib/cms-api.js';

// Cargar datos de certificados
let allCertificates: any[] = [];
let featuredCertificates: any[] = [];
let categories: any[] = [];

try {
  allCertificates = await getCertificates();
  featuredCertificates = await getFeaturedCertificates();
  categories = await getCertificateCategories();
  console.log('✅ Certificados cargados:', allCertificates.length);
} catch (error) {
  console.error('❌ Error loading certificates:', error);
}

// Mapear categorías a nombres legibles
const categoryNames: Record<string, string> = {
  programming: '💻 Programación',
  design: '🎨 Diseño',
  marketing: '📈 Marketing',
  data: '📊 Datos',
  cloud: '☁️ Cloud',
  security: '🔒 Seguridad',
  management: '👥 Gestión',
  language: '🌍 Idiomas',
  other: '📚 Otros'
};
---

<section id="certificates" class="py-20 bg-gradient-to-br from-blue-50 via-white to-purple-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center px-4 py-2 bg-blue-100 text-blue-800 rounded-full text-sm font-medium mb-4">
        Certificaciones Profesionales
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        🏆 Mis <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">Certificados</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Formación continua y certificaciones que respaldan mi experiencia profesional
      </p>
    </div>

    <!-- Estadísticas -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
      <div class="bg-white rounded-2xl p-6 text-center shadow-lg">
        <div class="text-3xl font-bold text-blue-600 mb-2">{allCertificates.length}</div>
        <div class="text-gray-600">Certificados Totales</div>
      </div>
      <div class="bg-white rounded-2xl p-6 text-center shadow-lg">
        <div class="text-3xl font-bold text-green-600 mb-2">{featuredCertificates.length}</div>
        <div class="text-gray-600">Destacados</div>
      </div>
      <div class="bg-white rounded-2xl p-6 text-center shadow-lg">
        <div class="text-3xl font-bold text-purple-600 mb-2">{categories.length}</div>
        <div class="text-gray-600">Categorías</div>
      </div>
    </div>

    <!-- Grid de Certificados -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="certificates-grid">
      {allCertificates.map((certificate) => (
        <div class="certificate-card bg-white rounded-2xl shadow-lg overflow-hidden group hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2" data-category={certificate.category}>
          <!-- Imagen del Certificado - Formato 1:1 -->
          <div class="relative aspect-square overflow-hidden">
            <img 
              src={certificate.image_url || '/certificates/default-cert.jpg'}
              alt={`Certificado ${certificate.title}`}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
            />
            
            <!-- Overlay con botones PDF y Verificación -->
            <div class="absolute inset-0 bg-black bg-opacity-60 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="flex flex-col sm:flex-row gap-3 px-4">
                {certificate.pdf_url ? (
                  <a 
                    href={certificate.pdf_url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="bg-white text-gray-900 px-4 py-2 rounded-lg font-medium flex items-center space-x-2 transform translate-y-4 group-hover:translate-y-0 transition-all duration-300 hover:bg-gray-100 text-sm"
                  >
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z"></path>
                    </svg>
                    <span>Ver PDF</span>
                  </a>
                ) : (
                  <div class="bg-gray-500 text-white px-4 py-2 rounded-lg font-medium flex items-center space-x-2 text-sm">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M18.364 5.636l-3.536-3.536A1 1 0 0014.121 2H6a2 2 0 00-2 2v12a2 2 0 002 2h8a2 2 0 002-2V6.636z"></path>
                    </svg>
                    <span>Sin PDF</span>
                  </div>
                )}
                
                {certificate.credential_url ? (
                  <a 
                    href={certificate.credential_url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="bg-blue-600 text-white px-4 py-2 rounded-lg font-medium flex items-center space-x-2 transform translate-y-4 group-hover:translate-y-0 transition-all duration-300 hover:bg-blue-700 text-sm"
                  >
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z" clip-rule="evenodd"></path>
                    </svg>
                    <span>Verificar</span>
                  </a>
                ) : null}
              </div>
            </div>
          </div>

          <!-- Información del Certificado -->
          <div class="p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">
              {certificate.title}
            </h3>

            <!-- Institución -->
            <div class="flex items-center text-sm text-gray-600 mb-3">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3z"></path>
              </svg>
              {certificate.institution}
            </div>

            <!-- Categoría -->
            <div class="inline-flex items-center px-3 py-1 bg-blue-100 text-blue-800 text-xs font-medium rounded-full">
              {categoryNames[certificate.category] || certificate.category}
            </div>

            <!-- Fecha si existe -->
            {certificate.issue_date && (
              <div class="flex items-center text-sm text-gray-600 mt-3">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zM4 7h12v9a1 1 0 01-1 1H5a1 1 0 01-1-1V7z" clip-rule="evenodd"></path>
                </svg>
                {new Date(certificate.issue_date).toLocaleDateString('es-ES', { year: 'numeric', month: 'long' })}
              </div>
            )}
          </div>
        </div>
      ))}
    </div>

    {allCertificates.length === 0 && (
      <div class="text-center py-16">
        <div class="text-6xl mb-4">📜</div>
        <h3 class="text-2xl font-bold text-gray-900 mb-2">Cargando certificados...</h3>
        <p class="text-gray-600">Los certificados se están cargando desde el CMS.</p>
      </div>
    )}
  </div>
</section>