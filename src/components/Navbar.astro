---
interface Props {
  class?: string;
}

const links = [
  { text: "Sobre mí", href: "#about" },
  { text: "Habilidades", href: "#skills" },
  { text: "Proyectos", href: "#projects" },
  { text: "Contacto", href: "#contact" }
];
---

<nav class="fixed w-full bg-white/90 backdrop-blur-sm z-50 shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex items-center">
        <a href="#" class="text-xl font-bold bg-gradient-to-r from-blue-600 to-emerald-500 bg-clip-text text-transparent">
          César Olvera
        </a>
      </div>
      <div class="hidden sm:flex items-center space-x-8">
        {links.map(link => (
          <a 
            href={link.href} 
            class="text-gray-700 hover:text-blue-600 transition-colors duration-300"
          >
            {link.text}
          </a>
        ))}
      </div>
      <button class="sm:hidden text-gray-700 hover:text-blue-600">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
</nav>
