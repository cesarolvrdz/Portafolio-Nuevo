---
import { getProfile, getSiteSettings, getSocialLinks } from '../lib/cms-api.js';

// Obtener datos dinámicos del CMS
let profile: any = null;
let siteSettings: any = {};
let socialLinks: any[] = [];

try {
  profile = await getProfile();
  siteSettings = await getSiteSettings();
  socialLinks = await getSocialLinks();
} catch (error) {
  console.error('Error loading about data:', error);
}

// Verificar si la sección debe mostrarse
const showAbout = siteSettings?.show_about !== false;
if (!showAbout) return null;

// Configuración de contenido desde CMS
const aboutTitle = siteSettings?.about_title || 'Sobre Mí';
const aboutDescription = siteSettings?.about_description || profile?.bio;
const skills = profile?.skills || [];

// Procesar featured_technologies correctamente
let featuredTechnologies = [];
try {
  if (siteSettings?.featured_technologies) {
    featuredTechnologies = Array.isArray(siteSettings.featured_technologies) 
      ? siteSettings.featured_technologies 
      : JSON.parse(siteSettings.featured_technologies);
  } else {
    featuredTechnologies = skills.slice(0, 8);
  }
} catch (e) {
  featuredTechnologies = skills.slice(0, 8);
}

const education = profile?.education || [];

// Procesar certifications y languages con protección contra errores JSON
let certifications = [];
try {
  certifications = profile?.certifications ? JSON.parse(profile.certifications) : [];
} catch (e) {
  certifications = [];
}

let languages = [];
try {
  languages = profile?.languages ? JSON.parse(profile.languages) : [];
} catch (e) {
  languages = [];
}

// Datos de idiomas por defecto si no vienen del CMS
if (languages.length === 0) {
  languages = [
    { name: "Español", level: "Nativo" },
    { name: "Inglés", level: "Avanzado" }
  ];
}

// Estadísticas personales desde CMS
const stats = [
  { number: profile?.years_experience || '0', label: 'Años de Experiencia', icon: 'experience' },
  { number: profile?.projects_completed || '0', label: 'Proyectos Completados', icon: 'projects' },
  { number: certifications.length || '0', label: 'Certificaciones', icon: 'certificates' },
  { number: '100', label: 'Satisfacción del Cliente', suffix: '%', icon: 'satisfaction' }
];
---

<!-- About Section Compacto -->
<section id="about" class="py-16 bg-gradient-to-br from-slate-50 via-white to-blue-50 relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 bg-[url('/grid.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))] opacity-20"></div>
  
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Section Header Compacto -->
    <div class="text-center mb-12" data-animate="fadeInUp">
      <div class="inline-flex items-center justify-center w-12 h-12 bg-gradient-to-r from-blue-600 to-purple-600 rounded-full mb-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
      </div>
      <h2 class="text-3xl md:text-4xl font-bold text-slate-800 mb-4">
        {aboutTitle}
      </h2>
      <p class="text-lg text-slate-600 max-w-2xl mx-auto leading-relaxed">
        Mi trayectoria profesional y la pasión que impulsa mi trabajo
      </p>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 xl:grid-cols-3 gap-12 mb-16">
      <!-- Profile Info -->
      <div class="xl:col-span-2 space-y-8">
        <!-- Bio Section -->
        <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-white/20">
          <h3 class="text-2xl font-bold text-slate-800 mb-6 flex items-center">
            <svg class="w-6 h-6 mr-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Mi Historia
          </h3>
          
          {profile?.bio ? (
            <p class="text-lg text-slate-700 leading-relaxed mb-6">
              {profile.bio}
            </p>
          ) : (
            <div class="space-y-4 text-lg text-slate-700 leading-relaxed">
              <p>
                Como Ingeniero en Sistemas Computacionales con formación complementaria en Contabilidad, combino una sólida base técnica con una perspectiva integral de los negocios digitales.
              </p>
              <p>
                Mi pasión por la tecnología y la creatividad me ha llevado a especializarme en desarrollo frontend, creación de contenido digital y diseño 3D, permitiéndome ofrecer soluciones innovadoras y visualmente atractivas.
              </p>
            </div>
          )}

          <!-- Contact Info -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-6">
            {profile?.location && (
              <div class="flex items-center space-x-3 text-slate-600">
                <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-slate-800">Ubicación</p>
                  <p class="text-slate-600">{profile.location}</p>
                </div>
              </div>
            )}
            
            {profile?.email && (
              <div class="flex items-center space-x-3 text-slate-600">
                <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-slate-800">Email</p>
                  <a href={`mailto:${profile.email}`} class="text-blue-600 hover:text-blue-800 transition-colors">
                    {profile.email}
                  </a>
                </div>
              </div>
            )}
          </div>
        </div>

        <!-- Formación Académica removida - Los datos están en la sección Education más abajo -->

        <!-- Technologies/Skills -->
        <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-white/20">
          <h3 class="text-2xl font-bold text-slate-800 mb-6 flex items-center">
            <svg class="w-6 h-6 mr-3 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
            </svg>
            Stack Tecnológico
          </h3>
          <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-3">
            {featuredTechnologies.map((tech: string) => (
              <div class="group relative">
                <div class="flex items-center justify-center p-4 bg-gradient-to-r from-blue-50 to-purple-50 rounded-xl border border-blue-200 hover:border-blue-300 transition-all duration-300 hover:shadow-md">
                  <span class="text-sm font-medium text-slate-700 group-hover:text-blue-700 transition-colors">
                    {tech}
                  </span>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Stats & Additional Info -->
      <div class="space-y-8">
        <!-- Languages -->
        {languages.length > 0 && (
          <div class="bg-white/80 backdrop-blur-sm rounded-lg p-4 shadow-md border border-white/20">
            <h3 class="text-base font-semibold text-slate-800 mb-2 flex items-center">
              <svg class="w-4 h-4 mr-1.5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path>
              </svg>
              Idiomas
            </h3>
            <div class="space-y-1.5">
              {languages.map((lang: any) => (
                <div class="flex justify-between items-center p-1.5 bg-indigo-50 rounded">
                  <span class="font-medium text-slate-800 text-xs">{lang.name}</span>
                  <span class="text-xs text-indigo-600 font-medium">{lang.level}</span>
                </div>
              ))}
            </div>
          </div>
        )}

        <!-- Certifications -->
        {certifications.length > 0 && (
          <div class="bg-white/80 backdrop-blur-sm rounded-lg p-4 shadow-md border border-white/20">
            <h3 class="text-base font-semibold text-slate-800 mb-2 flex items-center">
              <svg class="w-4 h-4 mr-1.5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
              </svg>
              Certificaciones
            </h3>
            <div class="space-y-1.5">
              {certifications.map((cert: any) => (
                <div class="p-1.5 bg-yellow-50 rounded border border-yellow-200">
                  <div class="font-medium text-slate-800 text-xs">{cert.name}</div>
                  <div class="text-xs text-slate-500">{cert.issuer} • {cert.year}</div>
                </div>
              ))}
            </div>
          </div>
        )}

        <!-- Social Links -->
        {socialLinks.length > 0 && (
          <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-white/20">
            <h3 class="text-xl font-bold text-slate-800 mb-4">Sígueme</h3>
            <div class="flex flex-wrap gap-3">
              {socialLinks.map((social) => (
                <a 
                  href={social.url}
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="inline-flex items-center justify-center w-12 h-12 bg-gradient-to-r from-slate-100 to-slate-200 hover:from-blue-500 hover:to-purple-600 hover:text-white rounded-xl transition-all duration-300 transform hover:scale-110 shadow-md hover:shadow-lg"
                  title={social.platform}
                >
                  <span class="font-semibold text-sm">
                    {social.platform.charAt(0).toUpperCase()}
                  </span>
                </a>
              ))}
            </div>
          </div>
        )}
      </div>
    </div>

    <!-- Specialties/Services -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="group bg-white/80 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-white/20 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
        <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-purple-600 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-slate-800 mb-4 group-hover:text-blue-600 transition-colors">
          Desarrollo Frontend
        </h3>
        <p class="text-slate-600 leading-relaxed">
          Creación de interfaces modernas, responsivas y optimizadas utilizando las últimas tecnologías web y mejores prácticas de UX/UI.
        </p>
      </div>

      <div class="group bg-white/80 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-white/20 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
        <div class="w-16 h-16 bg-gradient-to-r from-purple-500 to-pink-600 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-slate-800 mb-4 group-hover:text-purple-600 transition-colors">
          Producción Multimedia
        </h3>
        <p class="text-slate-600 leading-relaxed">
          Edición profesional de video y fotografía para crear contenido digital impactante que conecte con tu audiencia.
        </p>
      </div>

      <div class="group bg-white/80 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-white/20 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
        <div class="w-16 h-16 bg-gradient-to-r from-green-500 to-teal-600 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10l-2 1m0 0l-2-1m2 1v2.5M20 7l-2 1m2-1l-2-1m2 1v2.5M14 4l-2-1-2 1M4 7l2-1M4 7l2 1M4 7v2.5M12 21l-2-1m2 1l2-1m-2 1v-2.5M6 18l-2-1v-2.5M18 18l2-1v-2.5"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-slate-800 mb-4 group-hover:text-green-600 transition-colors">
          Diseño 3D
        </h3>
        <p class="text-slate-600 leading-relaxed">
          Creación de renders y animaciones 3D utilizando Mine-Imator para contenido visual único y llamativo.
        </p>
      </div>
    </div>
  </div>
</section>

