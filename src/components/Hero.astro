---
import { getProfile, getContentSettings, getSocialLinks } from '../lib/data.js';

// Obtener datos din√°micos
let profile: any = null;
let contentSettings: any = {};
let socialLinks: any[] = [];

try {
  profile = await getProfile();
  contentSettings = await getContentSettings();
  socialLinks = await getSocialLinks();
} catch (error) {
  console.error('Error loading hero data:', error);
}

// Fallbacks para contenido
const fullName = profile?.full_name || profile?.name || 'C√©sar Olvera Rodr√≠guez';
const firstName = fullName.split(' ')[0];
const heroTitle = contentSettings?.hero_title || fullName;
const heroSubtitle = contentSettings?.hero_subtitle || profile?.title || 'Ingeniero en Sistemas Computacionales | Desarrollador Frontend | Creador Digital';
const heroDescription = profile?.bio || profile?.description || 'Desarrollador apasionado por crear experiencias digitales excepcionales usando las tecnolog√≠as m√°s modernas.';
const heroLocation = profile?.location || 'M√©xico';
const heroEmail = profile?.email;
const avatarUrl = profile?.avatar_url;

// Skills desde el perfil o configuraciones
const skills = profile?.skills ? JSON.parse(profile.skills) : ['JavaScript', 'React', 'Node.js', 'TypeScript', 'Astro', 'TailwindCSS'];
---

<!-- Hero Section con Dise√±o Moderno -->
<section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-900">
  <!-- Animated Background -->
  <div class="absolute inset-0">
    <!-- Geometric shapes -->
    <div class="absolute top-10 left-10 w-72 h-72 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob"></div>
    <div class="absolute top-20 right-10 w-72 h-72 bg-gradient-to-r from-yellow-400 to-pink-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-2000"></div>
    <div class="absolute -bottom-8 left-20 w-72 h-72 bg-gradient-to-r from-pink-400 to-red-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-4000"></div>
    
    <!-- Grid Pattern -->
    <div class="absolute inset-0 grid-pattern opacity-10"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="text-center">
      <!-- Avatar con efecto glassmorphism -->
      {avatarUrl && (
        <div class="mb-8 flex justify-center">
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-r from-cyan-400 to-purple-500 rounded-full animate-pulse"></div>
            <img 
              src={avatarUrl}
              alt={heroTitle}
              class="relative w-40 h-40 rounded-full object-cover border-4 border-white/20 backdrop-blur-sm shadow-2xl"
            />
            <!-- Status badge -->
            <div class="absolute -bottom-2 -right-2 bg-green-500 text-white text-xs px-3 py-1 rounded-full font-medium shadow-lg">
              üöÄ Available
            </div>
          </div>
        </div>
      )}

      <!-- Title con animaci√≥n de escritura -->
      <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 leading-tight">
        <span class="bg-gradient-to-r from-cyan-400 via-purple-400 to-pink-400 bg-clip-text text-transparent">
          {heroTitle}
        </span>
      </h1>

      <!-- Subtitle animado -->
      <div class="mb-8">
        <p class="text-xl md:text-2xl text-white/90 font-light max-w-3xl mx-auto leading-relaxed">
          {heroSubtitle}
        </p>
        {heroLocation && (
          <div class="flex items-center justify-center mt-4 text-white/70">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
            </svg>
            {heroLocation}
          </div>
        )}
      </div>

      <!-- Description -->
      <p class="text-lg text-white/80 max-w-2xl mx-auto mb-12 leading-relaxed">
        {heroDescription}
      </p>

      <!-- Skills Pills -->
      <div class="flex flex-wrap justify-center gap-3 mb-12">
        {skills.map((skill: string) => (
          <span class="px-4 py-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full text-white/90 text-sm font-medium hover:bg-white/20 transition-all duration-300 hover:scale-105">
            {skill}
          </span>
        ))}
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
        <a 
          href="#projects" 
          class="group inline-flex items-center px-8 py-4 bg-gradient-to-r from-cyan-500 to-purple-600 text-white font-semibold rounded-xl shadow-2xl hover:shadow-cyan-500/25 transform hover:-translate-y-1 transition-all duration-300 hover:scale-105"
        >
          <span class="mr-2">Ver Mis Proyectos</span>
          <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
          </svg>
        </a>

        {heroEmail && (
          <a 
            href={`mailto:${heroEmail}`}
            class="group inline-flex items-center px-8 py-4 bg-white/10 backdrop-blur-sm border border-white/20 text-white font-semibold rounded-xl hover:bg-white/20 transform hover:-translate-y-1 transition-all duration-300"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
            </svg>
            Contactar
          </a>
        )}
      </div>

      <!-- Social Links -->
      {socialLinks && socialLinks.length > 0 && socialLinks.filter(link => link && link.url && link.platform).length > 0 && (
        <div class="mt-12 pt-8 border-t border-white/20">
          <p class="text-white/60 text-sm mb-4">S√≠gueme en:</p>
          <div class="flex justify-center space-x-6">
            {socialLinks
              .filter(link => link && link.url && link.platform && link.url.trim() !== '')
              .map((link: any) => (
              <a 
                href={link.url} 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-white/70 hover:text-white transform hover:scale-125 transition-all duration-300"
                title={link.display_name || link.platform}
              >
                {link.platform.toLowerCase() === 'github' && (
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                )}
                {(link.platform.toLowerCase() === 'twitter' || link.platform.toLowerCase() === 'x') && (
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                )}
                {link.platform.toLowerCase() === 'instagram' && (
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                )}
              </a>
            ))}
          </div>
        </div>
      )}
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-2 left-1/2 transform -translate-x-1/2 text-white/70">
      <div class="flex flex-col items-center">
        <span class="text-sm mb-2">Explora m√°s</span>
        <div class="w-6 h-10 border-2 border-white/30 rounded-full flex justify-center">
          <div class="w-1 h-3 bg-white/50 rounded-full mt-2 animate-bounce"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }
  
  .grid-pattern {
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.1'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  }
</style>
