---
import { getProfile, getSiteSettings, getSocialLinks } from '../lib/cms-api.js';

// Obtener datos din√°micos del CMS
let profile: any = null;
let siteSettings: any = {};
let socialLinks: any[] = [];

try {
  profile = await getProfile();
  siteSettings = await getSiteSettings();
  socialLinks = await getSocialLinks();
} catch (error) {
  console.error('Error loading contact data:', error);
}

// Verificar si la secci√≥n debe mostrarse
const showContact = siteSettings?.show_contact !== false;
if (!showContact) return null;

// Configuraci√≥n de contacto desde CMS
const contactEmail = siteSettings?.contact_email || profile?.email;
const contactPhone = siteSettings?.contact_phone || profile?.phone;
const contactLocation = siteSettings?.contact_location || profile?.location;
const availability = profile?.available_for_work;
const responseTime = siteSettings?.response_time;

// Servicios disponibles
const services = [
  { name: 'Desarrollo Web', icon: 'code', description: 'Aplicaciones web modernas y responsivas' },
  { name: 'Dise√±o 3D', icon: 'cube', description: 'Renders y animaciones personalizadas' },
  { name: 'Multimedia', icon: 'video', description: 'Edici√≥n de video y fotograf√≠a' },
  { name: 'Consultor√≠a', icon: 'lightbulb', description: 'Asesor√≠a t√©cnica y estrat√©gica' }
];

// Formas de contacto
const contactMethods = [
  {
    name: 'Email',
    value: contactEmail,
    href: `mailto:${contactEmail}?subject=Consulta sobre proyecto&body=Hola C√©sar,%0D%0A%0D%0AMe gustar√≠a hablar contigo sobre...`,
    icon: 'email',
    primary: true
  }
  // Tel√©fono y WhatsApp temporalmente ocultos
  // {
  //   name: 'Tel√©fono',
  //   value: contactPhone,
  //   href: `tel:${contactPhone.replace(/[^0-9]/g, '')}`,
  //   icon: 'phone',
  //   primary: false
  // },
  // {
  //   name: 'WhatsApp',
  //   value: 'Chat directo',
  //   href: `https://wa.me/${contactPhone.replace(/[^0-9]/g, '')}?text=Hola C√©sar, me interesa hablar contigo sobre un proyecto`,
  //   icon: 'whatsapp',
  //   primary: false
  // }
];
---

<!-- Contact Section -->
<section id="contact" class="py-20 bg-gradient-to-br from-slate-900 via-blue-900 to-purple-900 text-white relative overflow-hidden">
  <!-- Background Effects -->
  <div class="absolute inset-0 bg-[url('/grid.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))] opacity-20"></div>
  <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-blue-500/20 rounded-full blur-3xl animate-pulse"></div>
  <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-purple-500/20 rounded-full blur-3xl animate-pulse delay-1000"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full mb-6">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
      </div>
      <h2 class="text-4xl md:text-5xl font-bold mb-6">
        ¬øTienes un proyecto en mente?
      </h2>
      <p class="text-xl text-blue-100 max-w-3xl mx-auto leading-relaxed">
        Hablemos sobre c√≥mo puedo ayudarte a hacer realidad tus ideas
      </p>
    </div>

    <div class="grid grid-cols-1 xl:grid-cols-3 gap-8 mb-16">
      <!-- Contact Methods -->
      <div class="xl:col-span-2 grid grid-cols-1 lg:grid-cols-2 gap-6">
        {contactMethods.map((method) => (
          <div class={`bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20 hover:bg-white/20 transition-all duration-300 ${method.primary ? 'lg:col-span-2 border-blue-400/50' : ''}`}>
            <div class="flex items-start space-x-4">
              <div class={`w-12 h-12 rounded-lg flex items-center justify-center ${method.primary ? 'bg-blue-500' : 'bg-white/20'}`}>
                {method.icon === 'email' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                )}
                {method.icon === 'phone' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                )}
                {method.icon === 'whatsapp' && (
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.109"/>
                  </svg>
                )}
              </div>
              <div class="flex-grow">
                <h3 class="text-lg font-semibold text-white mb-1">{method.name}</h3>
                <p class="text-blue-200 mb-3">{method.value}</p>
                <a 
                  href={method.href}
                  class={`inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 ${method.primary ? 'bg-blue-500 hover:bg-blue-600 text-white' : 'bg-white/20 hover:bg-white/30 text-white'}`}
                >
                  üìß Cont√°ctame
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Availability & Info -->
      <div class="space-y-6">
        {/* Availability Status */}
        <div class={`bg-white/10 backdrop-blur-sm rounded-2xl p-6 border ${availability ? 'border-green-400/50' : 'border-yellow-400/50'}`}>
          <div class="flex items-center mb-4">
            <div class={`w-3 h-3 rounded-full mr-3 ${availability ? 'bg-green-400 animate-pulse' : 'bg-yellow-400'}`}></div>
            <h3 class="text-lg font-semibold text-white">
              {availability ? 'Disponible' : 'Ocupado'}
            </h3>
          </div>
          <p class="text-blue-200 text-sm mb-4">
            {availability 
              ? 'Aceptando nuevos proyectos y colaboraciones' 
              : 'Agenda completa, pero puedes contactarme para futuros proyectos'
            }
          </p>
          <div class="text-xs text-blue-300">
            Tiempo de respuesta: {responseTime}
          </div>
        </div>

        {/* Location */}
        {contactLocation && (
          <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
            <div class="flex items-center mb-3">
              <svg class="w-5 h-5 text-blue-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <h3 class="text-lg font-semibold text-white">Ubicaci√≥n</h3>
            </div>
            <p class="text-blue-200">{contactLocation}</p>
            <p class="text-xs text-blue-300 mt-2">Trabajo remoto disponible</p>
          </div>
        )}
      </div>
    </div>

    <!-- Services Grid -->
    <div class="mb-16">
      <h3 class="text-2xl font-bold text-white mb-8 text-center">Servicios Disponibles</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {services.map((service) => (
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20 hover:bg-white/20 transition-all duration-300 text-center">
            <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg flex items-center justify-center mx-auto mb-4">
              {service.icon === 'code' && (
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                </svg>
              )}
              {service.icon === 'cube' && (
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10l-2 1m0 0l-2-1m2 1v2.5M20 7l-2 1m2-1l-2-1m2 1v2.5M14 4l-2-1-2 1M4 7l2-1M4 7l2 1M4 7v2.5M12 21l-2-1m2 1l2-1m-2 1v-2.5M6 18l-2-1v-2.5M18 18l2-1v-2.5"></path>
                </svg>
              )}
              {service.icon === 'video' && (
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
              )}
              {service.icon === 'lightbulb' && (
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
              )}
            </div>
            <h4 class="text-white font-semibold mb-2">{service.name}</h4>
            <p class="text-blue-200 text-sm">{service.description}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- Social Links -->
    {socialLinks.length > 0 && (
      <div class="text-center">
        <h3 class="text-xl font-semibold text-white mb-6">Tambi√©n me encuentras en</h3>
        <div class="flex justify-center space-x-4">
          {socialLinks.map((social) => (
            <a 
              href={social.url}
              target="_blank" 
              rel="noopener noreferrer"
              class="w-12 h-12 bg-white/20 hover:bg-white/30 rounded-lg flex items-center justify-center transition-all duration-200 hover:scale-110"
              title={social.platform}
            >
              <span class="text-white font-semibold">
                {social.platform.charAt(0).toUpperCase()}
              </span>
            </a>
          ))}
        </div>
      </div>
    )}
  </div>
</section>
