---
// 🎯 Sección CV integrada con CMS Laravel
import CVApiService from '../lib/cv-api.js';

// Inicializar servicio API
const cvService = new CVApiService();

// Obtener idioma actual (puedes adaptarlo según tu sistema i18n)
const currentLanguage = 'es'; // Por defecto español

// Cargar CV actual
let currentCV = null;
let cvStats = null;
let loadingError = null;

try {
  currentCV = await cvService.getCurrentCV(currentLanguage);
  cvStats = await cvService.getCVStats();
} catch (error) {
  loadingError = (error as Error).message || 'Error desconocido';
  console.error('Error loading CV data:', error);
}
---

<section id="cv" class="py-20 bg-gradient-to-br from-green-50 via-white to-blue-50">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="text-center mb-12">
      <div class="inline-flex items-center px-4 py-2 bg-green-100 text-green-800 rounded-full text-sm font-medium mb-4">
        📄 Currículum Vitae
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        Mi <span class="text-transparent bg-clip-text bg-gradient-to-r from-green-600 to-blue-600">CV Profesional</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Descarga mi currículum actualizado con toda mi experiencia profesional y habilidades técnicas
      </p>
    </div>

    {loadingError ? (
      <!-- Error State -->
      <div class="bg-red-50 border border-red-200 rounded-2xl p-8 text-center">
        <div class="text-red-500 mb-4">
          <svg class="w-16 h-16 mx-auto" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-red-800 mb-2">Error cargando CV</h3>
        <p class="text-red-600">{loadingError}</p>
        <button 
          onclick="window.location.reload()" 
          class="mt-4 bg-red-600 text-white px-6 py-2 rounded-lg hover:bg-red-700 transition-colors"
        >
          Reintentar
        </button>
      </div>
    ) : currentCV ? (
      <!-- CV Content -->
      <div class="bg-white rounded-3xl shadow-xl overflow-hidden">
        <!-- CV Header -->
        <div class="bg-gradient-to-r from-green-600 to-blue-600 text-white p-8">
          <div class="flex flex-col md:flex-row md:items-center md:justify-between">
            <div class="mb-4 md:mb-0">
              <h3 class="text-2xl font-bold mb-2">{currentCV.title}</h3>
              <p class="text-green-100 mb-3">{currentCV.description}</p>
              <div class="flex flex-wrap gap-4 text-sm">
                <span class="bg-white/20 px-3 py-1 rounded-full">
                  📊 Versión {currentCV.version}
                </span>
                <span class="bg-white/20 px-3 py-1 rounded-full">
                  📥 {currentCV.download_count} descargas
                </span>
                <span class="bg-white/20 px-3 py-1 rounded-full">
                  📏 {CVApiService.formatFileSize(currentCV.file_size || 0)}
                </span>
                {currentCV.source && (
                  <span class="bg-yellow-400/20 px-3 py-1 rounded-full text-yellow-100">
                    🔗 {currentCV.source === 'supabase' ? 'Supabase' : 'Laravel CMS'}
                  </span>
                )}
              </div>
            </div>
            
            <!-- CV Actions -->
            <div class="flex flex-col sm:flex-row gap-3">
              <!-- Botón Vista Previa -->
              {currentCV.file_url && (
                <a 
                  href={currentCV.file_url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="bg-white/20 backdrop-blur-sm text-white px-6 py-3 rounded-xl font-semibold flex items-center justify-center hover:bg-white/30 transition-all duration-300 group"
                >
                  <svg class="w-5 h-5 mr-2 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
                    <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
                  </svg>
                  Vista Previa
                </a>
              )}
              
              <!-- Botón Descarga -->
              {currentCV.file_url && (
                <a 
                  href={currentCV.file_url}
                  download={`${currentCV.title || 'CV'}.pdf`}
                  class="bg-white text-green-600 px-6 py-3 rounded-xl font-semibold flex items-center justify-center hover:bg-gray-50 transition-all duration-300 shadow-lg group"
                >
                  <svg class="w-5 h-5 mr-2 group-hover:translate-y-1 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                  </svg>
                  📄 Descargar CV
                </a>
              )}
            </div>
          </div>
        </div>

        <!-- CV Details -->
        <div class="p-8">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Información del Archivo -->
            <div class="bg-gray-50 rounded-2xl p-6">
              <div class="flex items-center mb-4">
                <div class="bg-blue-100 p-3 rounded-xl">
                  <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <h4 class="text-lg font-semibold text-gray-900 ml-3">Información</h4>
              </div>
              <div class="space-y-3 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-600">Tipo:</span>
                  <span class="font-medium text-gray-900 uppercase">{currentCV.file_type || 'PDF'}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Tamaño:</span>
                  <span class="font-medium text-gray-900">
                    {currentCV.file_size ? CVApiService.formatFileSize(currentCV.file_size) : 'No disponible'}
                  </span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Idioma:</span>
                  <span class="font-medium text-gray-900 uppercase">{currentCV.language}</span>
                </div>
              </div>
            </div>

            <!-- Estadísticas -->
            <div class="bg-gray-50 rounded-2xl p-6">
              <div class="flex items-center mb-4">
                <div class="bg-green-100 p-3 rounded-xl">
                  <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"></path>
                  </svg>
                </div>
                <h4 class="text-lg font-semibold text-gray-900 ml-3">Estadísticas</h4>
              </div>
              <div class="space-y-3 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-600">Descargas:</span>
                  <span class="font-bold text-green-600">{currentCV.download_count}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Versión:</span>
                  <span class="font-medium text-gray-900">{currentCV.version}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Estado:</span>
                  <span class="text-green-600 font-medium">✅ Actual</span>
                </div>
                {currentCV.source && (
                  <div class="flex justify-between">
                    <span class="text-gray-600">Fuente:</span>
                    <span class="font-medium text-blue-600">
                      {currentCV.source === 'supabase' ? '🗃️ Supabase' : '🚀 Laravel CMS'}
                    </span>
                  </div>
                )}
              </div>
            </div>

            <!-- Fechas -->
            <div class="bg-gray-50 rounded-2xl p-6">
              <div class="flex items-center mb-4">
                <div class="bg-purple-100 p-3 rounded-xl">
                  <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zM4 7h12v9a1 1 0 01-1 1H5a1 1 0 01-1-1V7z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <h4 class="text-lg font-semibold text-gray-900 ml-3">Fechas</h4>
              </div>
              <div class="space-y-3 text-sm">
                <div>
                  <span class="text-gray-600 block">Creado:</span>
                  <span class="font-medium text-gray-900">{CVApiService.formatDate(currentCV.created_at)}</span>
                </div>
                <div>
                  <span class="text-gray-600 block">Actualizado:</span>
                  <span class="font-medium text-gray-900">{CVApiService.formatDate(currentCV.updated_at)}</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    ) : (
      <!-- Loading State -->
      <div class="bg-white rounded-3xl shadow-xl p-12 text-center">
        <div class="animate-spin w-12 h-12 border-4 border-green-200 border-t-green-600 rounded-full mx-auto mb-4"></div>
        <p class="text-gray-600">Cargando información del CV...</p>
      </div>
    )}

    <!-- Statistics Section (if available) -->
    {cvStats && (
      <div class="mt-8 bg-white rounded-2xl shadow-lg p-6">
        <h3 class="text-xl font-bold text-gray-900 mb-4 text-center">📊 Estadísticas Generales</h3>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 text-center">
          <div class="bg-blue-50 rounded-xl p-4">
            <div class="text-2xl font-bold text-blue-600">{cvStats.total_downloads || 0}</div>
            <div class="text-sm text-blue-800">Descargas Totales</div>
          </div>
          <div class="bg-green-50 rounded-xl p-4">
            <div class="text-2xl font-bold text-green-600">{cvStats.total_versions || 1}</div>
            <div class="text-sm text-green-800">Versiones</div>
          </div>
          <div class="bg-purple-50 rounded-xl p-4">
            <div class="text-2xl font-bold text-purple-600">{cvStats.languages_count || 1}</div>
            <div class="text-sm text-purple-800">Idiomas</div>
          </div>
        </div>
      </div>
    )}
  </div>
</section>

<script define:vars={{ cvData: currentCV }}>
  // Datos del CV disponibles para uso si es necesario
  console.log('CVSection loaded with data:', cvData);
</script>

<style>
  .animate-fade-in {
    animation: fadeIn 0.5s ease-in-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Responsive PDF viewer */
  @media (max-width: 768px) {
    #cv-pdf-viewer {
      height: 400px;
    }
  }
</style>
